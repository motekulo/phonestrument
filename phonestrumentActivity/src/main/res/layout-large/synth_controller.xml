<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Synth 1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:text="@string/filter_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/horFader1"
        android:layout_below="@+id/textView1"
        android:text="@string/filter_attack_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader1"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_below="@+id/textView1"
        android:layout_marginBottom="@dimen/horfader_vertical_margin"
        android:layout_toRightOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/horFader2"
        android:layout_below="@+id/textView2"
        android:text="@string/filter_decay_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader2"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_below="@+id/horFader1"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginBottom="@dimen/horfader_vertical_margin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/horFader3"
        android:layout_below="@+id/textView3"
        android:text="@string/filter_range_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader3"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_below="@+id/horFader2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginBottom="@dimen/horfader_vertical_margin" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/horFader4"
        android:layout_below="@+id/textView4"
        android:text="@string/filter_freq_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader4"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_below="@+id/horFader3"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginBottom="@dimen/horfader_vertical_margin" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horFader4"
        android:text="@string/amp_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/horFader5"
        android:layout_below="@+id/textView6"
        android:text="@string/amp_attack_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader5"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginBottom="@dimen/horfader_vertical_margin" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        
        android:layout_below="@+id/textView7"
        android:text="@string/amp_decay_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader6"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_below="@+id/horFader5"
        android:layout_toRightOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/synthPaintView1"
        android:text="Synth 2"
        android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/synthPaintView1"
        android:layout_below="@+id/textView10"
        android:text="Wavetable"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <net.motekulo.phonstrument.SynthPaintView
        android:id="@+id/synthPaintView1"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
       android:layout_marginLeft="12dp"
        android:layout_below="@+id/textView14"
        android:layout_toRightOf="@+id/horFader1" 
        android:layout_marginBottom="@dimen/horfader_vertical_margin"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/synthPaintView1"
        android:layout_below="@+id/synthPaintView1"
        android:text="Smoothness"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader7"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@+id/textView11"
        android:layout_below="@+id/synthPaintView1"
        android:layout_marginBottom="@dimen/horfader_vertical_margin" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:text="Attack"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader8"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@+id/textView12"
        android:layout_below="@+id/horFader7"
        android:layout_alignLeft="@+id/horFader7"
        android:layout_marginBottom="@dimen/horfader_vertical_margin" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/synthPaintView1"
        android:layout_below="@+id/textView12"
        android:text="Decay"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader9"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@+id/textView13"
        android:layout_below="@+id/horFader8"
        android:layout_alignLeft="@+id/horFader7" />

     <LinearLayout
        android:id="@+id/linearLayoutAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </LinearLayout>
    
</RelativeLayout>