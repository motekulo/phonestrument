        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignTop="@+id/verticalFader1"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/verticalFader5" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/verticalFader4"
        android:layout_below="@+id/verticalFader3"
        android:layout_marginLeft="16dp"
        android:text="@string/drum2_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/verticalFader3"
        android:layout_below="@+id/verticalFader2"
