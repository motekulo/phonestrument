        android:layout_alignTop="@+id/verticalFader1"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/verticalFader3" />

    <net.motekulo.phonstrument.HorizontalFader
        android:id="@+id/horFader5"
        android:layout_width="72dp"
        android:layout_height="24dp"
