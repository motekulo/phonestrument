        android:text="@string/drum1_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/verticalFader5"
        android:layout_below="@+id/verticalFader4"
        android:layout_marginLeft="16dp"
        android:text="@string/drum3_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/verticalFader6"
        android:layout_below="@+id/verticalFader5"
        android:layout_marginLeft="16dp"
        android:text="@string/drum4_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

